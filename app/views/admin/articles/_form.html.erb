<%= form_with(model: [:admin, @article], local: true) do |f| %>
  <div><%= f.label :thumbnail %><br>
    <%= f.file_field :thumbnail %>
    <% if @article.thumbnail? %>
      <%= image_tag @article.thumbnail.url, width: 200 %>
    <% end %>
  </div>
  <div><%= f.label :title %><br><%= f.text_field :title %></div>
  <div><%= f.label :body %><br><%= f.text_area :body, rows: 6 %></div>
  <div><%= f.label :published_on, '公開日' %><br><%= f.date_field :published_on %></div>
  <div><%= f.submit %></div>
<% end %>
