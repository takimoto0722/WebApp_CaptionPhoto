<div>
  <h1 class="display-3 my-5">ウソ写真
  <small class="text-muted d-block">（Caption Photo）</small>
  </h1>
</div>
<div class="container mx-auto" style="max-width: 500px;">
  <%= form_with model: @photograph, local: true, html: { class: 'd-flex flex-column gap-4' } do |f| %>
    <!-- バリデーション -->
    <% if @photograph.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @photograph.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <!-- 写真アップロード エリア -->
    <div>
      <%= f.label :image, '写真をアップロード', class: 'form-label' %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>
    <!-- キャプション入力 エリア -->
    <div>
      <%= f.label :caption, 'キャプション（※）を入力', class: 'form-label' %>
      <%= f.text_area :caption, rows: 1, class: 'form-control' %>
      <div class="text-end text-muted small">25字以内</div>
    </div>
    <!-- リンクボタン エリア -->
    <div class="d-flex justify-content-evenly m-4">
      <!-- 「Back」ボタンは shared/button partial で -->
      <%= render "shared/button", label: "Back", path: root_path %>
      <!-- 「Fix」ボタンは f.submit を partial 相当のクラスでスタイリング -->
      <%= render "shared/button", label: "Fix", submit: true, f: f %>
    </div>
  <% end %>
</div>
