<div >
  <h1 class="display-3 my-5">ウソ写真
  <small class="text-muted d-block">（Caption Photo）</small>
  </h1>
</div>
<div class="container mx-auto" style="max-width: 500px;">
  <% if @photograph.image? %>
    <div>
      <%= image_tag @photograph.image.url, class: "img-fluid px-4" %>
    </div>
  <% end %>
  <p class="fs-5 lh-lg m-4"><strong>Caption:</strong> <%= @photograph.caption %></p>
  <div class="d-flex justify-content-evenly m-4">
    <!-- 「SAVE」ボタン タグに直接定義 -->
    <%= link_to "Save",
          @photograph.image.url,
          download: "captioned_photo.jpg",
          class: "fs-5 btn btn-light rounded-pill px-4 py-2",
          style: "min-width: 85px;" %>
    <!-- 「TOP」ボタン shared/button partial 呼び出し -->
    <%= render "shared/button", label: "TOP", path: root_path %>
  </div>
  <div class="m-5">
    <%= render "shared/button", label: "写真について", path: articles_path  %>
  </div>
</div>